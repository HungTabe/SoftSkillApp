        <!-- Upload Video Section -->
        <LinearLayout
            android:id="@+id/layout_upload_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Upload Video"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video URL"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_video_url"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FBE9E7"
                android:hint="Video URL"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Title"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_video_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FBE9E7"
                android:hint="Video title"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_video_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FBE9E7"
                android:hint="Category"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <Button
                android:id="@+id/btn_upload_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A0522D"
                android:text="Upload Video"
                android:textColor="#000000" />
        </LinearLayout>

